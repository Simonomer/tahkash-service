{
  "compileOnSave": true,
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",                          
    "module": "commonjs",                  
    "allowJs": true,                       
    "sourceMap": true,                
    "outDir": "./dist",                       
    "rootDir": "./src",                       
    "strict": false,                          
    "esModuleInterop": true,                  
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  }, 
  "include": [
    "src/**/*",
    "src/**/*.json"
  ]
}
